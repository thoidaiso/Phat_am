<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="50dp"
    android:orientation="horizontal"
    android:background="@drawable/nav_list_color" >	
    
    <View 
        android:id="@+id/divider"
	    android:layout_width="fill_parent"
	    android:layout_height="0.4px"
	    android:background="#444444" />
    
    <ImageView
        android:id="@+id/navi_menu_icon"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="3dip"
        android:layout_width="20dip"
        android:layout_height="20dip" 
        android:layout_centerVertical="true"
        android:contentDescription="Icon menu"/>

    <TextView
        android:id="@+id/navi_menu_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dip"
        android:layout_toRightOf="@id/navi_menu_icon"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#bbbbbb"
        android:textSize="18sp"/>
    
</RelativeLayout>