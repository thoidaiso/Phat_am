<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/notify_background" >

    <ImageView
        android:id="@+id/notify_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cd_disk"
        android:layout_alignParentLeft="true" />

   <TextView
       android:id="@+id/title"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBottom="@+id/notify_image"
       android:layout_marginBottom="30dp"
       android:layout_marginLeft="18dp"
       android:layout_toRightOf="@+id/notify_image"
       android:text="This song is"
       android:textColor="@color/white" />

   <ImageButton
       android:id="@+id/btnPlay"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBottom="@+id/notify_image"
       android:layout_alignParentRight="true"
       android:background="@null"
       android:src="@drawable/btn_play"
      />

</RelativeLayout>