<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="50dp"
    android:orientation="horizontal"
    android:background="@drawable/content_list_color" >	
    
    <View 
        android:id="@+id/divider"
	    android:layout_width="fill_parent"
	    android:layout_height="0.4px"
	    android:background="#fcfcfc" />
    
	<ImageView
        android:id="@+id/category_list_icon"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="20dip"
        android:layout_width="10dip"
        android:layout_height="10dip" 
        android:layout_centerVertical="true"
        android:src="@drawable/ic_category_icon"/>
    <TextView
        android:id="@+id/category_list_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/category_list_icon"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#444444"
        android:textSize="17sp"/>
    
    <TextView
        android:id="@+id/category_list_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:text="Medium Text"
        android:textAppearance="@android:style/TextAppearance.Medium" />
    
</RelativeLayout>